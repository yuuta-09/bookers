<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: @group.get_owner %>
      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: Book.new %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Group detail</h2>
  		<table class='table'>
        <thead>
          <tr>
            <th></th>
            <th>グループ名</th>
            <th>紹介文</th>
            <th>メンバー</th>
            <th colspan="2"></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>
              <%= image_tag @group.get_image(100,100) %><br>
            </td>
            <td><%= @group.name %></td>
            <td><%= @group.introduction %></td>
            <td>
              <% @group.users.each do |user| %>
                <p class="mb-0"><%= user.name %></p>
              <% end %>
            </td>
            <% if @group.owner_id == current_user.id %>
              <td><%= link_to 'Edit', edit_group_path(@group), class: "btn btn-success" %></td>
            <% elsif @group.users.include?(current_user) %>
              <td><%= link_to 'Leave this group', group_leave_path(@group), method: :delete, class: "btn btn-danger" %></td>
            <% else %>
              <td><%= link_to 'Join This Group', group_join_path(@group), class: "btn btn-success" %></td>
            <% end %>
            <% if @group.owner_id == current_user.id %>
              <td><%= link_to "Notice an Event", group_notice_path(@group), class: "btn btn-info" %></td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>