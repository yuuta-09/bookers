<% if user_signed_in? %>
  <div class="row">
    <%= form_with url: search_path, method: :get do |f| %>
      <%= f.text_field :word %>
      <%= f.select :range, options_for_select([['User'], ['Book']]) %>
      <%= f.select :how, options_for_select([["完全一致","perfect_match"], ["前方一致","forward_match"],  ["後方一致","backward_match"], ["部分一致","partial_match"]]) %>
      <%= f.submit "検索" %>
    <% end %>
    <%= form_with url: search_path, method: :get, class: "ml-4" do |f| %>
      <%= f.text_field :word %>
      <%= f.submit "タグ検索" %>
    <% end %>
  </div>
<% end %>